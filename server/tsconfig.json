{
  "compilerOptions": {
    "target": "es6",                       
    "module": "commonjs",  
	"moduleResolution": "node",                       
    "outDir": "./dist", 
	"rootDir": "./" ,                    
    "removeComments": true,      
    "forceConsistentCasingInFileNames": true,       
    "strict": true, 
	"esModuleInterop": true, 
	"experimentalDecorators": true,
	"emitDecoratorMetadata": true, 
	"types": ["jest", "node"]
  },
  "include": ["src/**/*","__test__/**/*"],
  "exclude": ["node_modules"]
}
